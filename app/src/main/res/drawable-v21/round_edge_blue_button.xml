<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false" >
<shape
    android:shape="rectangle">
    <corners
        android:radius="@dimen/_6sdp"/>
    <gradient android:startColor="#1c8dff"
        android:angle="90"
        android:centerColor="#1c8dff"
        android:endColor="#1c8dff"/>
    <stroke
        android:color="#e6e3e1"
        android:width="0.5dp"/>
</shape>
    </item>

    <item android:state_pressed="true" >
        <shape
            android:shape="rectangle">
            <corners
                android:radius="@dimen/_7sdp"/>

            <gradient android:startColor="#0F77F7"
                android:angle="45"
                android:centerColor="#0F77F7"
                android:endColor="#0F77F7"/>
            <stroke
                android:color="@color/blue"
                android:width="0.5dp"/>
        </shape>
    </item>
</selector>