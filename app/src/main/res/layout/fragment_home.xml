<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">


    <com.airbnb.lottie.LottieAnimationView
        android:layout_width="@dimen/_180sdp"
        app:lottie_fileName=
            "movingvehicle.json"
        android:layout_marginTop="@dimen/_120sdp"
        android:layout_centerHorizontal="true"
        android:id="@+id/trakk_anim"
        android:layout_height="@dimen/_180sdp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/start_trakk"
        android:layout_marginEnd="@dimen/_30sdp"
        android:layout_marginStart="@dimen/_30sdp"
        android:textStyle="bold"
        android:background="@drawable/round_edge_blue_button"
        android:textColor="@color/white"
        android:textSize="@dimen/_30ssp"
        android:layout_below="@id/trakk_anim"
        android:layout_centerHorizontal="true"
        android:id="@+id/trakk_state_text"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:paddingTop="@dimen/_14sdp"
        android:background="@color/blue"
        android:layout_alignParentBottom="true"
        android:id="@+id/last_trakk_layout"
        android:layout_marginTop="@dimen/_20sdp"

        android:orientation="vertical">
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textSize="@dimen/_18ssp"
            android:textColor="@color/white"
            android:id="@+id/last_trakk_id_text"
            android:layout_height="wrap_content"
            tools:text="Last Trakk: 11:20pm"/>
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/_15sdp"
            android:textColor="@color/blue"
            android:id="@+id/view_trakk_details"
            android:textSize="@dimen/_13ssp"
            android:background="@drawable/round_edge_white_button"
            android:layout_height="wrap_content"
            android:text="@string/view_trakk_details"
            />

    </LinearLayout>
</RelativeLayout>